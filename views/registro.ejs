<%- include("templates/cabecera", {tituloWeb : "Registrarse", estilo : "../styles/styleRegistro.css"}) %>
<body>
    <header>
        <h1>MagdalenaDevelopers</h1>
        <h1>Registrarse</h1>
    </header>
    <main>
        <form action="/registro/rg" class="form" id="formRegistro" method="post">
            <h2>Registrarse</h2>
            <div class="form_container">
                <div class="form_group">
                    <group id="tipoUsuario">
                        <input class="form_input_1" type="radio" name="tipoU" value="3">Contratador</input>
                        <input class="form_input_1" type="radio" name="tipoU" value="2">Laborador</input>
                    </group>
                    <label for="tipoUsuario" class="form_label">Tipo de usuario</label>
                </div>
                <div class="form_group">
                    <input type="text" id="firstName" name="firstName" class="form_input" placeholder=" ">
                    <label for="firstName" class="form_label">primer nombre</label>
                </div>
                <div class="form_group">
                    <input type="text" id="SecondName" name="SecondName" class="form_input" placeholder=" ">
                    <label for="Secondname" class="form_label">Segundo nombre</label>
                </div>
                <div class="form_group">
                    <input type="text" id="primerApellido" name="primerApellido" class="form_input" placeholder=" ">
                    <label for="primerApellido" class="form_label">Primer apellido</label>
                </div>
                <div class="form_group">
                    <input type="text" id="segundoApellido" name="segundoApellido" class="form_input" placeholder=" ">
                    <label for="segundoApellido" class="form_label">Segundo apellido</label>
                </div>
                <div class="form_group">
                    <% if (generos.length > 0) { %>
                        <select id="idgenero" name="idgenero">
                            <% generos.forEach(genero => { %>
                            <option value=<%= generos.indexOf(genero) + 1 %>> <%= genero %> </option>
                            <% }) %>
                        </select>
                    <% } %>
                </div>
                <div class="form_group">
                    <input type="date" name="fechaNacimiento" id="fechaNacimiento" class="form_input">
                    <label for="fechaNacimiento" class="form_label">Fecha de nacimiento</label>
                </div>
                <div class="form_group">
                    <input type="text" name="calleResidencia" id="calleResidencia" class="form_input">
                    <label for="calleResidencia" class="form_label">Dirección de residencia</label>
                </div>
                <div class="form_group">
                    <% if (ciudades.length > 0) { %>
                        <select id="ciudadN" name="ciudadN">
                            <option value="-1">Selecciona la ciudad</option>
                            <% ciudades.forEach(ciudad => { %>
                            <option value=<%= ciudades.indexOf(ciudad) + 1 %>> <%= ciudad %> </option>
                            <% }) %>
                        </select>
                    <% } %>
                    <label for="ciudadN" class="form_label">Ciudad de nacimiento</label>
                </div>
                <div class="form_group">
                    <% if (ciudades.length > 0) { %>
                        <select id="ciudadR" name="ciudadR">
                            <option value="-1">Selecciona la ciudad</option>
                            <% ciudades.forEach(ciudad => { %>
                            <option value=<%= ciudades.indexOf(ciudad) + 1 %>> <%= ciudad %> </option>
                            <% }) %>
                        </select>
                    <% } %>
                    <label for="ciudadR" class="form_label">Ciudad de residencia</label>
                </div>
                <div class="form_group">
                    <input type="text" name="telefono" id="telefono" class="form_input">
                    <label for="telefono" class="form_label">Télefono</label>
                </div>
                <div class="form_group">
                    <input type="text" name="celular" id="celular" class="form_input">
                    <label for="celular" class="form_label">Celular</label>
                </div>
                <div class="form_group">
                    <group id="tiposDocumento">
                        <% if (tiposDocumentos.length > 0) { %>
                         <% tiposDocumentos.forEach(tipo => { %>
                            <input type="radio" name="tipoDocumento" value=<%= tiposDocumentos.indexOf(tipo) + 1 %> ><%= tipo %></input>
                         <% }) %>
                        <% } %>
                    </group>
                    <label for="tiposDocumento" class="form_label">Tipo de Documento</label>
                </div>
                <div class="form_group">
                    <input type="text" id="numeroDocumento" name="numeroDocumento" class="form_input" placeholder=" ">
                    <label for="numeroDocumento" class="form_label">Número de Documento</label>
                </div>
                <div class="form_group">
                    <input type="email" id="correo" name="correo" class="form_input" placeholder=" ">
                    <label for="correo" class="form_label">Correo</label>
                </div>
                <div class="form_group">
                    <input type="email" id="confirmarCorreo" class="form_input" placeholder=" ">
                    <label for="confirmarCorreo" class="form_label">Confirmar correo</label>
                </div>
                <div class="form_group">
                    <input type="password" id="pass" name="pass" class="form_input" placeholder=" ">
                    <label for="pass" class="form_label">Contraseña</label>
                </div>
                <div class="form_group">
                    <input type="password" id="confirmarContraseña" name="confirmarContraseña" class="form_input" placeholder=" ">
                    <label for="confirmarContraseña" class="form_label">Confirmar contraseña</label>
                </div>
            </div>
            <input type="button" class="form_submit" id="registro" value="Registrarme">
            <input type="submit" class="form_submit" value="volver a Inicio">
        </form>
    </main>
    <%- include("templates/footer") %>
</body>
<script src="js/registro.js"></script>
</html>